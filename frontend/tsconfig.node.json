{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
  "baseUrl": "./",
    "paths": {
      "app/*": [
        "./src/0_app/*"
      ],
      "pages/*": [
        "./src/1_pages/*"
      ],
      "widgets/*": [
        "./src/2_widgets/*"
      ],
      "features/*": [
        "./src/3_features/*"
      ],
      "entities/*": [
        "./src/4_entities/*"
      ],
      "shared/*": [
        "./src/shared/*"
      ],
      "src/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "./.eslintrc.cjs",
    "./rules/**/*",
    "./src/**/*",
    "./src/0_app/**/*.vue",
    "./vite.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
